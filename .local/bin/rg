#!/usr/bin/env bash
#-------------------------------------------------------------------------------
# Ripgrep shortcut (make rg use the provided configuration)
#-------------------------------------------------------------------------------

source $XDG_SCRIPTS_HOME/path-utils.sh

# Exclude this shortcut from the path, so `rg` will resolve to the system binary.
path_remove "$XDG_BIN_HOME" PATH

RIPGREP_CONFIG_PATH=$XDG_CONFIG_HOME/ripgrep/config rg "$@"

