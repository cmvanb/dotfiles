#-------------------------------------------------------------------------------
# Alacritty configuration file
#-------------------------------------------------------------------------------
<% source $XDG_OPT_HOME/theme/theme.sh %>
# Key bindings
#
# Example breakdown of CSIu (Ctrl+Shift+C):
#   \u001b\u005b\u0063\u003b\u0035\u0075
#
#   - Control sequence introducer (CSI) is \u001b\u005b
#   - Character c is \u0063
#   - Separator ; is \u003b
#   - Modifiers bitflag* for Ctrl+Shift (5) is \u0035
#   - Unicode u is \u0075
#
# *Modifiers bitflag: 1 is shift, 2 is alt, 4 is ctrl
#-------------------------------------------------------------------------------

[[keyboard.bindings]]
mods = 'Control'
key = 'T'
action = 'SpawnNewInstance'

[[keyboard.bindings]]
mode = '~Alt'
mods = 'Control'
key = 'C'
action = 'Copy'

[[keyboard.bindings]]
mode = '~Alt'
mods = 'Control'
key = 'V'
action = 'Paste'

[[keyboard.bindings]]
mode = '~Alt'
mods = 'Control'
key = 'D'
action = 'ScrollHalfPageDown'

[[keyboard.bindings]]
mode = '~Alt'
mods = 'Control'
key = 'U'
action = 'ScrollHalfPageUp'

[[keyboard.bindings]]
mode = '~Alt'
mods = 'Control'
key = 'J'
action = 'ScrollLineDown'

[[keyboard.bindings]]
mode = '~Alt'
mods = 'Control'
key = 'K'
action = 'ScrollLineUp'

# STTY interrupt passthrough
[[keyboard.bindings]]
mods = 'Control'
key = 'X'
chars = "\u0003"

# STTY EOF passthrough
[[keyboard.bindings]]
mods = 'Control'
key = 'Period'
chars = "\u0004"

# Ctrl+I -> F13 passthrough
[[keyboard.bindings]]
mode = 'Alt'
mods = 'Control'
key = 'I'
chars = "\u001b\u005b\u0031\u003b\u0032\u0050"

# Ctrl+M -> F14 passthrough
[[keyboard.bindings]]
mode = 'Alt'
mods = 'Control'
key = 'M'
chars = "\u001b\u005b\u0031\u003b\u0032\u0051"

# Ctrl+Backspace -> F15 passthrough
[[keyboard.bindings]]
mode = 'Alt'
mods = 'Control'
key = 'Backspace'
chars = "\u001b\u005b\u0031\u003b\u0032\u0052"

# Ctrl+Tab passthrough (NVIM can correctly interpret this, no function key hack)
[[keyboard.bindings]]
mode = 'Alt'
mods = 'Control'
key = 'Tab'
chars = "\u001b\u005b\u0039\u003b\u0035\u0075"

# Appearance
#-------------------------------------------------------------------------------

[bell]
animation = 'Linear'
color = '<% color_hash $primary_1 %>'
duration = 200

[cursor.style]
blinking = 'Off'
shape = 'Block'

[font]
size = <%= $font_size_medium %>

[font.normal]
family = '<%= $font_mono %>'

[window]
opacity = 1.0

[window.padding]
x = 0
y = 0

