#!/usr/bin/env bash
#-------------------------------------------------------------------------------
# Wayland/wlroots wallpaper configuration
#-------------------------------------------------------------------------------

# Imports
#-------------------------------------------------------------------------------

# shellcheck disable=SC1091
source "$XDG_OPT_HOME/wayland-utils/set-output-wallpaper.sh"

# Wallpaper configuration
#-------------------------------------------------------------------------------

pkill -x swaybg

declare horizontal_wallpaper="$XDG_PICTURES_DIR/wallpapers/vertical/abstract-blue-orange-pink.jpg"
declare vertical_wallpaper="$XDG_PICTURES_DIR/wallpapers/vertical/abstract-blue-orange-pink.jpg"

set_output_wallpaper HDMI-A-6 "$vertical_wallpaper"
set_output_wallpaper DP-3 "$horizontal_wallpaper"
set_output_wallpaper DP-4 "$vertical_wallpaper"
